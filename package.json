{
  "name": "restaurant-review-site",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.32",
    "@fortawesome/free-solid-svg-icons": "^5.15.1",
    "@fortawesome/react-fontawesome": "^0.1.11",
    "gh-pages": "^3.1.0",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-scripts": "^3.4.3"
  },
  "scripts": {
    "dev:styles": "postcss src/tailwind.css -o src/styles.css",
    "dev:app": "react-scripts start",
    "dev": "yarn dev:styles && yarn dev:app",
    "build:styles": "cross-env NODE_ENV=production postcss src/tailwind.css -o src/styles.css",
    "build:app": "react-scripts build",
    "build": "yarn build:styles && yarn build:app",
    "start": "yarn dev",
    "test": "react-scripts test",
    "gh-pages:publish": "gh-pages -d build",
    "deploy": "yarn build && yarn gh-pages:publish",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/serviceWorker.js",
      "!src/index.js",
      "!<rootDir>/node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "coverageReporters": [
      "text"
    ]
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.3.0",
    "autoprefixer": "^9.8.6",
    "cross-env": "^7.0.2",
    "cssnano": "^4.1.10",
    "postcss-cli": "^7.1.2",
    "prettier": "^2.1.2",
    "tailwindcss": "^1.8.13"
  }
}
