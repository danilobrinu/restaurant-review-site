{
  "name": "restaurant-review-site",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.25",
    "@fortawesome/free-solid-svg-icons": "^5.11.2",
    "@fortawesome/react-fontawesome": "^0.1.7",
    "@xstate/react": "^0.8.1",
    "gh-pages": "^2.1.1",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.2.0",
    "xstate": "^4.6.7"
  },
  "scripts": {
    "dev:styles": "tailwind build src/tailwind.css -o src/styles.css",
    "dev:app": "react-scripts start",
    "dev": "yarn dev:styles && yarn dev:app",
    "build:styles": "cross-env NODE_ENV=production tailwind build src/tailwind.css -o src/styles.css",
    "build:app": "react-scripts build",
    "build": "yarn build:styles && yarn build:app",
    "start": "yarn dev",
    "test": "react-scripts test",
    "gh-pages:publish": "gh-pages -d build",
    "deploy": "yarn build && yarn gh-pages:publish",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "autoprefixer": "^9.7.2",
    "cross-env": "^6.0.3",
    "postcss-cli": "^6.1.3",
    "prettier": "^1.19.1",
    "tailwindcss": "^1.1.4"
  }
}
